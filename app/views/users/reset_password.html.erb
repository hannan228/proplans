<div>
  <div class="row">
    <div class="col-md-2"> </div>
    <div class="col-md-8">
      <div class="container my-4">
        <div class="row featurette d-flex justify-content-center align-items-center">
          <h2 class="text-center">Reset Your Password</h2>
          <%= form_with url: reset_password_extend_path, method: :post do |f| %>
            <%# <%= render "devise/shared/error_messages", resource: resource %>
            <div class="form-group">
              <%= f.label :email %><br />
              <%= f.email_field :email, autocomplete: "email" , class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :token %><br />
              <%= f.text_field :token, autocomplete: "email" , class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :password %><br />
              <%= f.password_field :password, autocomplete: "email" , class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "email" , class: "form-control" %>
            </div>
            <br>
            <div class="actions d-grid gap-2 col-6 mx-auto">
              <%= f.submit "Reset Password", data: {turbo: false}, class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-2"> </div>
  </div>
</div>